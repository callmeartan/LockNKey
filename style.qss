QMainWindow {
    background-color: #131313;
}
QLabel, QPushButton {
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 16px;
    color: #E4E6EB;
}
QPushButton {
    background-color: #4F6EFD;
    border: none;
    border-radius: 4px;
    padding: 10px 15px;
    font-weight: 500;
}
QPushButton:hover {
    background-color: #657ECF;
}
QLineEdit {
    border: 1px solid #555;
    border-radius: 4px;
    padding: 8px;
    background-color: #1C1C1C;
    color: #E4E6EB; /* Consistent text color with labels and buttons */
    font-size: 16px; /* Consistent font size for better readability */
}
